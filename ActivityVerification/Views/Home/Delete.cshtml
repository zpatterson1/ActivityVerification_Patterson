@model ActivityVerification.Models.Activity

@{
    ViewBag.Title = "Delete";
}



<div class="row">
    <div class="col-md-12 boxed" @*style="max-width:50%; margin:10px auto"*@>
        <h3>Delete</h3>

        <h4 class="text-danger">Are you sure you want to delete this <br />
        activity?</h4>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ActivityType.Type):
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ActivityType.Type)
                </dd>
                @if (Model.Type == 2)
                {
                    <dt>
                        @Html.DisplayNameFor(model => model.RecognitionReason1.Reason):
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.RecognitionReason1.Reason)
                    </dd>

                }
                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt>
                    Owner:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.AspNetUser.Email)
                </dd>
                <dt>
                    Updated:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Updated)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Verified)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Verified)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color col-md-offset-1">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    @Html.ActionLink("Cancel", "Index",null,new {@class="btn btn-default" })
                </div>
            }
        </div>
    </div>
</div>
